<h1>Article</h1>

<div class="row">
  <div class="col-sm-2">Title:</div>
  <div class="col-sm-9"><%= @article.title %></div>
</div>

<div class="row">
  <div class="col-sm-2">Text:</div>
  <div class="col-sm-9"><%= @article.text %></div>
</div>

<div>
  <%= link_to 'Edit', edit_article_path %> |
  <%= link_to 'Delete', article_path,
          method: :delete, data: {confirm: "Are you sure?"} %> |
  <%= link_to 'Back', articles_path %>
</div>

<hr/>

<h2>Comments</h2>
<!-- Automatically creates a loop -->
<%= render @article.comments %>

<h3>Add a comment:</h3>
<%= render 'comments/form'%>
