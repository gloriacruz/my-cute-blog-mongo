<h1>Listing articles</h1>

<h2><%= link_to 'New Article', new_article_path %></h2>

<table class="table table-bordered table-hover table-sm">
  <thead>
    <tr>
      <th scope="col" colspan="4">Title</th>
    </tr>
  </thead>

<% @articles.each do |article| %>
  <tbody>
    <tr>
      <th scope="row"><%= article.title %></th>
      <th><%= link_to 'Show', article_path(article) %></th>
      <th><%= link_to 'Edit', edit_article_path(article) %></th>
      <th><%= link_to 'Delete', article_path(article),
        method: :delete, data: {confirm: "Are you sure?"} %></th>
    </tr>
  </tbody>
<% end %>

